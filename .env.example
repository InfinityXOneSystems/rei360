GOOGLE_APPLICATION_CREDENTIALS=/secrets/gcp-key.json

# Frontend
VITE_API_BASE=http://localhost:8080
VITE_API_AUTH=http://localhost:8001
VITE_ENVIRONMENT=development

# Databases
DB_HOST=localhost
DB_PORT=5432
DB_USER=rei360_user
DB_PASSWORD=change_me_in_production
PROPERTY_DB_NAME=rei360_property
VECTOR_DB_NAME=rei360_vectors
DATABASE_URL=postgresql://rei360_user:change_me_in_production@localhost:5432/rei360_property

# Redis (caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Pub/Sub
PUBSUB_PROJECT_ID=infinity-x-one-systems
